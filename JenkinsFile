pipeline {
    agent any

    tools {
        maven 'Maven-3.9.12'
        jdk 'JDK-21'
    }

    environment {
        MAVEN_OPTS = "-Xmx1024m"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/BASMA01060106/Selenium_Cucumber'
            }
        }

        stage('Clean') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                bat 'mvn compile'
            }
        }

        stage('Run Tests') {
            steps {
                // G√©n√®re le JSON report pour Cucumber
                bat 'mvn test -Dcucumber.plugin="json:target/cucumber-report.json"'
            }
        }

        stage('Cucumber Report') {
            steps {
                // Utilise le plugin Cucumber Jenkins pour g√©n√©rer le HTML √† partir du JSON
                cucumber(
                    jsonReportDirectory: 'target',
                    fileIncludePattern: 'cucumber-report.json'
                )
            }
        }
    }

    post {
    success {
        echo 'üéâ Tests Selenium Cucumber OK'
    }
    failure {
        echo '‚ùå Pipeline √©chou√©'
    }
    always {
        echo '‚úÖ Pipeline termin√©'
    }
}
}